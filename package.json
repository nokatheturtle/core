    "clean": "rimraf lib"
  },
  "devDependencies": {
    "@types/node": "^18.0.5",
    "fastify": "^4.2.1",
    "nodemon": "^2.0.19",
    "np": "^7.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
