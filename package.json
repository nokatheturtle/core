{
  "name": "@angonoka/core",
  "version": "0.0.6",
  "description": "Modular backend framework with full freedom of will",
  "repository": "https://github.com/nokatheturtle/core",
  "author": "Artemiy Davydov",
  "license": "MIT",
  "main": "lib/cjs/index.js",
  "types": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "type": "module",
  "files": [
    "lib/**/*"
  ],
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
